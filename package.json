    "crypto-random-string": "1.0.0",
    "es6-error": "4.1.1",
    "file-saver": "1.3.8",
    "lodash": "4.17.11",
    "lovefield": "2.1.12",
    "mobx": "3.1.7",
    "mobx-react": "4.1.5",
    "mobx-react-form": "1.32.2",
    "mobx-react-router": "3.1.2",
    "moment": "2.21.0",
    "prop-types": "15.6.1",
