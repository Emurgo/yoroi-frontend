{
  "version": "1.0.4",
  "version_name": "st-1.0.4",
  "name": "Yoroi Staging",
  "manifest_version": 2,
  "description": "[staging] Cardano ADA wallet",
  "browser_action": {
    "default_title": "[staging] Yoroi"
  },
  "icons": {
    "16": "img/icon-16.png",
    "48": "img/icon-48.png",
    "128": "img/icon-128.png"
  },
  "background": {
    "page": "background.html"
  },
  "permissions": [
    "contextMenus",
    "management",
    "tabs",
    "storage",
    "notifications",
    "*://connect.trezor.io/5/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://connect.trezor.io/5/popup.html"],
      "js": ["js/trezor-content-script.js"]
    }
  ],
  "content_security_policy": "default-src 'self'; script-src 'self' 'unsafe-eval'; connect-src wss://iohk-staging.yoroiwallet.com:443 https://iohk-staging.yoroiwallet.com; style-src * 'unsafe-inline' 'self' blob:; img-src 'self' data:;"
}
